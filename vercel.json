{
  "buildCommand": "cd SentenceStash && npm install && npm run build",
  "outputDirectory": "SentenceStash/dist/public",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "functions": {
    "SentenceStash/api/index.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "SentenceStash/**"
    }
  }
}