{
  "rootDirectory": "SentenceStash",
  "buildCommand": "cd SentenceStash && npm install && npm run build",
  "outputDirectory": "SentenceStash/dist/public",
  "installCommand": "cd SentenceStash && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "SentenceStash/api/index.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}